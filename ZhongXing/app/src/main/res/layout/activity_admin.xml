<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lightgrey">

        <RelativeLayout
            android:id="@+id/mPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#17a3f2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="我的"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shap"
                android:src="@drawable/touxiang" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mPhoto">

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_one"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/imageView5"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/a1" />

                    <TextView
                        android:id="@+id/DailyAffairs"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:gravity="left|center"
                        android:text="  班级排名"
                        android:textSize="20dp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/tv_one"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/jiantou" />
                <LinearLayout
                    android:layout_below="@+id/ll_one"
                    android:id="@+id/ll_two"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/imageView7"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@drawable/b2" />

                    <TextView
                        android:id="@+id/WorkRecord"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#FFF"
                        android:gravity="left|center"
                        android:text="  今日考勤"
                        android:textSize="20dp"/>
                </LinearLayout>
                <ImageView
                    android:layout_below="@+id/tv_one"
                    android:id="@+id/tv_two"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/jiantou" />
               <LinearLayout
                   android:layout_below="@+id/ll_two"
                   android:id="@+id/ll_three"
                   android:layout_width="match_parent"
                   android:layout_height="50dp">
                   <ImageView
                       android:layout_gravity="center"
                       android:id="@+id/imageView9"
                       android:layout_width="45dp"
                       android:layout_height="45dp"
                       android:background="@drawable/sj1" />

                   <TextView
                       android:id="@+id/ScheduleReminder"
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:background="#FFF"
                       android:gravity="left|center"
                       android:text="  学生信息"
                       android:textSize="20dp"/>
               </LinearLayout>
                <ImageView
                    android:layout_below="@+id/tv_two"
                    android:id="@+id/tv_three"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/jiantou" />
                <LinearLayout
                    android:layout_below="@+id/ll_three"
                    android:id="@+id/ll_four"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/imageView11"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_below="@+id/imageView9"
                        android:background="@drawable/shezhi1" />

                    <TextView
                        android:id="@+id/SetUp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignBottom="@+id/imageView11"
                        android:background="#FFF"
                        android:gravity="left|center"
                        android:text="  待处理事件"
                        android:textSize="20dp" />
                </LinearLayout>
                <ImageView
                    android:layout_below="@+id/tv_three"
                    android:id="@+id/tv_four"
                    android:layout_width="45dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/jiantou" />
                <Button
                    android:id="@+id/Esc"
                    android:layout_width="500dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:background="#FFF"
                    android:gravity="center"
                    android:text="退出登录"
                    android:textSize="20dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>