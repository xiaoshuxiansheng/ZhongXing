<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lightgo.schooldaily.ActActivity.StuInfoActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:background="#17a3f2"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="match_parent">
            <Button
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back"/>
            <TextView
                android:layout_width="50dp"
                android:text="返回"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="添加成员"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="#FFFFFF"/>
        <Button
            android:layout_width="100dp"
            android:text="完成"
            android:textSize="18dp"
            android:layout_marginTop="0dp"
            android:textColor="#ffffff"
            android:layout_marginLeft="50dp"
            android:layout_height="match_parent"
            android:id="@+id/mSave"
            android:background="#00000000"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dip" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="#ffffff" />

                <Button
                    android:id="@+id/bt_selectall"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#F5F5F5"
                    android:text="全选" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="#ffffff" />

                <Button
                    android:id="@+id/bt_cancleselectall"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#F5F5F5"
                    android:text="反选" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="#ffffff" />

                <Button
                    android:id="@+id/bt_deselectall"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.95"
                    android:background="#F5F5F5"
                    android:text="取消选择" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="5dip" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="序号" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="姓名" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="学号" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="选择" />
            </LinearLayout>

            <com.lightgo.schooldaily.ActActivity.MyListView
                android:id="@+id/mStuInfo"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
