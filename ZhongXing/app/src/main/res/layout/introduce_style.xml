<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/mActivity"
                android:layout_width="wrap_content"
                android:layout_height="220dp"
                android:background="@drawable/sy"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <RelativeLayout
                android:id="@+id/my_tool"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/mActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/mBefor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/xueyuanjianjie"
                            android:id="@+id/ib_xyjj"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/ib_xyjj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学院简介"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/zte2"
                            android:id="@+id/ib_zxtx"
                            android:layout_width="90dp"
                            android:layout_height="90dp"/>
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/ib_zxtx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中兴通讯"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/zhuanxinfazhan"
                            android:id="@+id/ib_zxfz"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/ib_zxfz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="转型发展"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/mBefor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/xueyuanfengcai"
                            android:id="@+id/ib_xxfc"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/ib_xxfc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学院风采"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/shizituandui"
                            android:id="@+id/ib_sztd"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/ib_sztd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="师资团队"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="4dp"
                            android:background="@drawable/gengduo"
                            android:id="@+id/gd"
                            android:layout_width="80dp"
                            android:layout_height="80dp" />
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/gd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="更多"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
           <com.lightgo.schooldaily.CollegeIntroduce.ListViewForScrollView
               android:layout_below="@+id/my_tool"
               android:id="@+id/list5"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"></com.lightgo.schooldaily.CollegeIntroduce.ListViewForScrollView>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>