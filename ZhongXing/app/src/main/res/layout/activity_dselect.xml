<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lightgo.schooldaily.CheckActivity.DSelectActivity">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pop_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:background="#ffffff" >
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mCheckTime"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:id="@+id/text"
                    android:textSize="16dp"
                    android:text="考勤时间" />
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_below="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:background="@drawable/roundedrect"
                        android:id="@+id/bt_Mor"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:text="早自习"
                        android:textSize="14dp"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:textColor="#000000"/>
                    <Button
                        android:background="@drawable/roundedrect"
                        android:id="@+id/bt_Cla"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:text="上课"
                        android:textSize="14dp"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:textColor="#000000" />
                    <Button
                        android:background="@drawable/roundedrect"
                        android:id="@+id/bt_Eve"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:text="晚自习"
                        android:textSize="14dp"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mGrade"
                android:layout_below="@+id/mCheckTime"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:id="@+id/text1"
                    android:textSize="16dp"
                    android:text="年级" />
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_below="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:background="@drawable/roundedrect"
                            android:id="@+id/bt_Yiwu"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:text="15级"
                            android:textSize="14dp"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:textColor="#000000"/>
                        <Button
                            android:background="@drawable/roundedrect"
                            android:id="@+id/bt_Yiliu"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:text="16级"
                            android:textSize="14dp"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:textColor="#000000"/>
                        <Button
                            android:background="@drawable/roundedrect"
                            android:id="@+id/bt_YiQi1"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="14dp"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:textColor="#000000"
                            android:visibility="gone"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:id="@+id/d"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:background="@drawable/roundedrect"
                            android:id="@+id/bt_YiQi"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="14dp"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:textColor="#000000"
                            android:visibility="gone"/>
                        <Button
                            android:background="@drawable/roundedrect"
                            android:id="@+id/bt_YilBa"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="14dp"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:textColor="#000000"
                            android:visibility="gone"/></LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mMajorType"
                android:layout_below="@+id/mGrande"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:id="@+id/text2"
                    android:textSize="16dp"
                    android:text="专业类型" />
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_below="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:background="@drawable/roundedrect"
                        android:id="@+id/bt_Com"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:text="计科"
                        android:textSize="14dp"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:textColor="#000000"/>
                    <Button
                        android:background="@drawable/roundedrect"
                        android:id="@+id/bt_Ele"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:text="电信"
                        android:textSize="14dp"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mClass"
                android:layout_below="@+id/mMajorType"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:id="@+id/text3"
                    android:textSize="16dp"
                    android:text="班级" />
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_below="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:background="@drawable/roundedrect"
                        android:id="@+id/bt_One"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:text="一班"
                        android:textSize="14dp"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:textColor="#000000"/>
                    <Button
                        android:background="@drawable/roundedrect"
                        android:id="@+id/bt_Two"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:text="二班"
                        android:textSize="14dp"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:textColor="#000000"/>
                    <Button
                        android:background="@drawable/roundedrect"
                        android:id="@+id/bt_Three"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:textColor="#000000"
                        android:visibility="gone"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mCount"
                android:layout_below="@+id/mCheckTime"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:textSize="16dp"
                    android:text="迟到人数" />
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:id="@+id/AllCount"
                    android:textColor="#000000"
                    android:layout_marginRight="150dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mClass">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/finish"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/mFinish"/>
                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:text="完成"
                        android:layout_gravity="center"
                        android:textSize="14dp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
